<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MensPerfumesActivity"
    android:background="@color/menss_perfumne_background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mens_perfume_appbar"
        android:layout_width="match_parent"
        android:background="@drawable/mensperfumebanner"

        android:layout_height="145dp">


        <androidx.appcompat.widget.Toolbar

            android:id="@+id/mens_perfume_toolbar"
            android:layout_height="140dp"
            android:layout_width="match_parent"


            android:background="@drawable/mensperfumebanner">





        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mens_perfume_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_below="@id/mens_perfume_appbar"/>



</RelativeLayout>