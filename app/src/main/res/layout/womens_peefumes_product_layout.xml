<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"

    android:background="@drawable/product_background">



    <ImageView
        android:id="@+id/product_image"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"



        android:src="@drawable/faceelectriccleansingbrush" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image"
        android:layout_marginTop="-10dp"
        android:text="TextView"
        android:textColor="@color/flash_color"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/produt_sold"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        android:text="Sold"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:textColor="@color/flash_color"/>

    <TextView
        android:id="@+id/produt_sold_figure"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/product_price"
        android:layout_marginTop="5dp"
        android:text="Sold"
        android:paddingLeft="7dp"
        android:textColor="@color/new_arrivals_perfumne_toolbar_color"

        android:textSize="13sp"
        android:layout_toRightOf="@id/produt_sold"
        android:layout_marginLeft="4dp" />




</RelativeLayout>